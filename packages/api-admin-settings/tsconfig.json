{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../api" },
    { "path": "../api-i18n" },
    { "path": "../api-serverless-cms" },
    { "path": "../api-tenancy" },
    { "path": "../aws-sdk" },
    { "path": "../db-dynamodb" },
    { "path": "../error" },
    { "path": "../handler" },
    { "path": "../utils" },
    { "path": "../api-security" },
    { "path": "../handler-aws" },
    { "path": "../handler-db" },
    { "path": "../plugins" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/api/*": ["../api/src/*"],
      "@webiny/api": ["../api/src"],
      "@webiny/api-i18n/*": ["../api-i18n/src/*"],
      "@webiny/api-i18n": ["../api-i18n/src"],
      "@webiny/api-serverless-cms/*": ["../api-serverless-cms/src/*"],
      "@webiny/api-serverless-cms": ["../api-serverless-cms/src"],
      "@webiny/api-tenancy/*": ["../api-tenancy/src/*"],
      "@webiny/api-tenancy": ["../api-tenancy/src"],
      "@webiny/aws-sdk/*": ["../aws-sdk/src/*"],
      "@webiny/aws-sdk": ["../aws-sdk/src"],
      "@webiny/db-dynamodb/*": ["../db-dynamodb/src/*"],
      "@webiny/db-dynamodb": ["../db-dynamodb/src"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/utils/*": ["../utils/src/*"],
      "@webiny/utils": ["../utils/src"],
      "@webiny/api-security/*": ["../api-security/src/*"],
      "@webiny/api-security": ["../api-security/src"],
      "@webiny/handler-aws/*": ["../handler-aws/src/*"],
      "@webiny/handler-aws": ["../handler-aws/src"],
      "@webiny/handler-db/*": ["../handler-db/src/*"],
      "@webiny/handler-db": ["../handler-db/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"]
    },
    "baseUrl": "."
  }
}
