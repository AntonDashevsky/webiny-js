{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../lexical-editor" },
    { "path": "../react-composition" },
    { "path": "../theme" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/lexical-editor/*": ["../lexical-editor/src/*"],
      "@webiny/lexical-editor": ["../lexical-editor/src"],
      "@webiny/react-composition/*": ["../react-composition/src/*"],
      "@webiny/react-composition": ["../react-composition/src"],
      "@webiny/theme/*": ["../theme/src/*"],
      "@webiny/theme": ["../theme/src"]
    },
    "baseUrl": "."
  }
}
