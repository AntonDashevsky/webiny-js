{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "__tests__"
  ],
  "references": [{ "path": "../project/tsconfig.build.json" }],
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "./__tests__"
    ],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~tests/*": [
        "./__tests__/*"
      ],
      "@webiny/project/*": ["../project/src/*"],
      "@webiny/project": ["../project/src"]
    },
    "baseUrl": "."
  }
}
