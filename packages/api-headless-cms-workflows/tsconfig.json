{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../api-headless-cms" },
    { "path": "../api-workflows" },
    { "path": "../error" },
    { "path": "../handler" },
    { "path": "../plugins" },
    { "path": "../testing" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/api-headless-cms/*": ["../api-headless-cms/src/*"],
      "@webiny/api-headless-cms": ["../api-headless-cms/src"],
      "@webiny/api-workflows/*": ["../api-workflows/src/*"],
      "@webiny/api-workflows": ["../api-workflows/src"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/testing/*": ["../testing/src/*"],
      "@webiny/testing": ["../testing/src"]
    },
    "baseUrl": "."
  }
}
