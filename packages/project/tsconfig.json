{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [{ "path": "../di-container" }, { "path": "../feature" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/di-container/*": ["../di-container/src/*"],
      "@webiny/di-container": ["../di-container/src"],
      "@webiny/feature/*": ["../feature/src/*"],
      "@webiny/feature": ["../feature/src"]
    },
    "baseUrl": "."
  }
}
