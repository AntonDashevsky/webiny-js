{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../react-composition" },
    { "path": "../react-router" },
    { "path": "../utils" },
    { "path": "../cli" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/react-composition/*": ["../react-composition/src/*"],
      "@webiny/react-composition": ["../react-composition/src"],
      "@webiny/react-router/*": ["../react-router/src/*"],
      "@webiny/react-router": ["../react-router/src"],
      "@webiny/utils/*": ["../utils/src/*"],
      "@webiny/utils": ["../utils/src"],
      "@webiny/cli/*": ["../cli/src/*"],
      "@webiny/cli": ["../cli/src"]
    },
    "baseUrl": "."
  }
}
