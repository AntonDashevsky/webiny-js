      "@webiny/aws-sdk": ["../aws-sdk/src"],
      "@webiny/cli-plugin-deploy-pulumi/*": ["../cli-plugin-deploy-pulumi/src/*"],
      "@webiny/cli-plugin-deploy-pulumi": ["../cli-plugin-deploy-pulumi/src"]
    },
    "baseUrl": "."
  }
}
