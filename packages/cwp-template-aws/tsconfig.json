{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [{ "path": "../aws-sdk" }, { "path": "../cli-plugin-deploy-pulumi" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
