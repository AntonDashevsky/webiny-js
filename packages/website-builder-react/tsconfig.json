{
  "extends": "../../tsconfig.json",
  "include": ["src", "./vitest.config.ts"],
  "references": [{ "path": "../lexical-editor" }, { "path": "../website-builder-sdk" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/lexical-editor/*": ["../lexical-editor/src/*"],
      "@webiny/lexical-editor": ["../lexical-editor/src"],
      "@webiny/website-builder-sdk/*": ["../website-builder-sdk/src/*"],
      "@webiny/website-builder-sdk": ["../website-builder-sdk/src"]
    },
    "baseUrl": "."
  }
}
