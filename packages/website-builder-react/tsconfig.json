{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [{ "path": "../app-website-builder" }, { "path": "../lexical-editor" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/app-website-builder/*": ["../app-website-builder/src/*"],
      "@webiny/app-website-builder": ["../app-website-builder/src"],
      "@webiny/lexical-editor/*": ["../lexical-editor/src/*"],
      "@webiny/lexical-editor": ["../lexical-editor/src"]
    },
    "baseUrl": "."
  }
}
