{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../di-container" },
    { "path": "../logger" },
    { "path": "../project" },
    { "path": "../pulumi-sdk" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/di-container/*": ["../di-container/src/*"],
      "@webiny/di-container": ["../di-container/src"],
      "@webiny/logger/*": ["../logger/src/*"],
      "@webiny/logger": ["../logger/src"],
      "@webiny/project/*": ["../project/src/*"],
      "@webiny/project": ["../project/src"],
      "@webiny/pulumi-sdk/*": ["../pulumi-sdk/src/*"],
      "@webiny/pulumi-sdk": ["../pulumi-sdk/src"]
    },
    "baseUrl": "."
  }
}
