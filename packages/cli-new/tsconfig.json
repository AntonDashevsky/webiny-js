{
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "__tests__"
  ],
  "references": [
    {
      "path": "../di-container"
    },
    {
      "path": "../extensions"
    },
    {
      "path": "../project"
    }
  ],
  "compilerOptions": {
    "rootDirs": [
      "./src",
      "./__tests__"
    ],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~tests/*": [
        "./__tests__/*"
      ],
      "@webiny/di-container": [
        "../di-container/src"
      ],
      "@webiny/di-container/*": [
        "../di-container/src/*"
      ],
      "@webiny/extensions": [
        "../extensions/src"
      ],
      "@webiny/extensions/*": [
        "../extensions/src/*"
      ],
      "@webiny/project": [
        "../project/src"
      ],
      "@webiny/project/*": [
        "../project/src/*"
      ]
    },
    "baseUrl": "."
  }
}
